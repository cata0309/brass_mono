#!/usr/bin/env bash
# Install fonts (linux)
set -e -o pipefail

readonly user_font_dir=~/.fonts

mkdir -p "${user_font_dir}/BrassMono"
bin/uninstall

if [ "${1}" == ttf ]; then
  cp BrassMono/TrueType/*.ttf "${user_font_dir}/BrassMono"
else
  cp BrassMono/OpenType/*.otf "${user_font_dir}/BrassMono"
fi

bin/print end 'Installed fonts'
tree ~/.fonts
